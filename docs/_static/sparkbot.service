[Unit]
Description=Cisco Spark chatbot

[Service]
Environment="SPARK_ACCESS_TOKEN="
Environment="WEBHOOK_URL="
Environment="RECEIVER_PORT="
Type=simple
User={USER}
ExecStart=/home/{USER}/env/bin/python /home/{USER}/sparkbot/run.py
WorkingDirectory=/home/{USER}/sparkbot/
Restart=on-abort
StandardOutput=journal

[Install]
WantedBy=multi-user.target